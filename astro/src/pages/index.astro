---
import MainLayout from '../layouts/MainLayout.astro';

const skills = ['JavaScript', 'TypeScript', 'React', 'Node.js', 'Astro', 'Git'];
---

<MainLayout title="Jan Kowalski - Software Engineer">
  <header class="hero">
    <h1>Jan Kowalski</h1>
    <p>Fullstack Software Engineer</p>
  </header>

  <section class="about">
    <div>
      <h2>O mnie</h2>
      <p>
        Jestem pasjonatem tworzenia innowacyjnych rozwiązań webowych. 
        Specjalizuję się w nowoczesnych technologiach frontendowych i backendowych.
      </p>
      <ul class="skills">
        {skills.map(skill => <li>{skill}</li>)}
      </ul>
      <a href="/CV.pdf" download class="btn">Pobierz CV</a>
    </div>
  </section>

  <section class="social">
    <h2>Znajdź mnie online</h2>
    <div class="social-links">
      <a href="https://github.com/jankowalski" target="_blank">GitHub</a>
      <a href="https://linkedin.com/in/jankowalski" target="_blank">LinkedIn</a>
      <a href="https://twitter.com/jankowalski" target="_blank">Twitter</a>
    </div>
  </section>
</MainLayout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
    background: linear-gradient(to right, #f0f0f0, #ffffff);
  }
  
  .about {
    display: flex;
    gap: 2rem;
    align-items: center;
    margin: 2rem 0;
  }
  
  .skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
  }
  
  .skills li {
    background: #f0f0f0;
    padding: 0.5rem 1rem;
    border-radius: 20px;
  }
  
  .btn {
    display: inline-block;
    background: #000;
    color: #fff;
    padding: 0.5rem 1rem;
    text-decoration: none;
    border-radius: 5px;
    margin-top: 1rem;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
  
  .social-links a {
    color: #333;
    text-decoration: none;
    font-weight: bold;
  }
</style>